{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": [
        "NEXT_PUBLIC_SUPABASE_URL",
        "NEXT_PUBLIC_SUPABASE_ANON_KEY",
        "DATABASE_URL",
        "CRON_SECRET"
      ]
    },
    "lint": {
      "outputs": []
    },
    "typecheck": {
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "cache": false,
      "outputs": []
    },
    "test:all": {
      "dependsOn": ["test", "test:integration", "test:e2e"],
      "cache": false
    },
    "test:integration": {
      "cache": false,
      "outputs": []
    },
    "test:e2e": {
      "cache": false,
      "outputs": []
    }
  }
}